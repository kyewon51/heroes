#include<stdio.h>
int main() {
	int a;
	printf("정수 입력: ");
	scanf("%d", &a);
	
	for (int i=1;i<a;i++){
   for (int p=a-i;p>=0;p--){
	     printf(" ");
		}
		for (int j=1;j<=i;j++){ 
					printf("* ");
			}
	printf("\n");	
	}
	for (int i=1;i<=a;i++){
		for (int p=1;p<=i;p++){
			printf(" ");
		}
		for (int j=a-i;j>=0;j--){
			printf("* ");
		}
		printf("\n");
	}

	return 0;
}
