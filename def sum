def add_numbers(a, b):
    return a + b

num1 = float(input("첫 번째 숫자: "))
num2 = float(input("두 번째 숫자: "))

result = add_numbers(num1, num2)
print("더한 결과:", result)

def replace_string(input_string, old_substring, new_substring):

    return input_string.replace(old_substring, new_substring)


example_string = "Hello, world! Hello, Python!"
old_sub = "Hello"
new_sub = "Hi"

result = replace_string(example_string, old_sub, new_sub)
print("원본 문자열:", example_string)
print("치환된 문자열:", result)
